<% javascript 'dynamic_product_subcategories'%>

<h3>New Product</h3>

	<%= form_for [:admin, @product] do |form| %>
		<%= form.hidden_field :company_id, :value => current_user.company.id %>
		<%= render :partial => "product", :locals => {:form => form }%>
		<%= submit_tag "Add Product"%>
	<% end %>	
