<h3>Edit Purchase Order Type</h3>

<% form_for :purchase_order_type, :url => {:controller => 'admin', :action => 'update_purchase_order_type'} do |form|	%>
	<%= form.hidden_field	:id	%>
	<table>
		<tr><td>Purchase Order Type		</td>	<td><%= form.text_field :purchase_order_type		%>	</td></tr>
		<tr><td>Description				</td>	<td><%= form.text_field	:description				%>	</td></tr>
	</table>
	<%= submit_tag "Update PO Type"	%>
<% end %>