<h4>Basic Product Information</h4>
<table>
	<tr><td>Name					</td>	<td><%= form.text_field :name																								%>	</td></tr>
	<tr><td>Barcode					</td>	<td><%= form.text_field	:barcode																							%>	</td></tr>
	<tr><td>Alias					</td>	<td><%= form.text_field	:alias																								%>	</td></tr>
	<tr><td>Description				</td>	<td><%= form.text_field :description																						%>	</td></tr>
	<tr><td>GTIN					</td>	<td><%= form.text_field	:gtin_number																						%>	</td></tr>
	<tr><td>UPC						</td>	<td><%= form.text_field	:upc_number																							%>	</td></tr>
	<tr><td>Supplier				</td>	<td><%= form.select	:supplier_id, Supplier.all.collect {|s| [s.name, s.id]}, :include_blank => true							%>	</td></tr>
	<tr><td>Product Category		</td>	<td><%= form.select :product_category_id, ProductCategory.all.collect {|pc| [pc.name, pc.id]}, :include_blank => true		%>	</td></tr>
	<tr><td>Product Subcategory		</td>	<td><%= form.select :product_subcategory_id, ProductSubcategory.all.collect {|ps| [ps.name, ps.id]}, :include_blank => true	%>	</td></tr>
</table>		
