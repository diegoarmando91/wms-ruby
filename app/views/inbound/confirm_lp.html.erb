<h1>Confirm Receipt Line </h1>
	<p>Your are currently receiving receipt <%= @receipt.receipt_number %> at Dock Door <%= @dock_door.name %></p>

<p>Enter LP	</p>
	<%= form_for :receipt_line, :url => {:controller => 'inbound', :action=> 'receive_receipt_line'} do |form| %>
		<%= form.hidden_field	:dock_door_id,	:value => @dock_door.id	%>
		<%= form.hidden_field 	:receipt_id,	:value => @receipt.id	%>
		<table>
			<tr><td>LP	</td>	<td><%= form.text_field :lp		%>	</td></tr>
		</table>
		<%=	submit_tag "Receive"%>
	<% end %>
