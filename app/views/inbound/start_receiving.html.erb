<h1>Receiving</h1>
<p>Identify Dock Door and Receipt</p>
	<%= form_for :receipt_line, :url => {:controller =>'inbound', :action => 'confirm_lp'} do |form| %>
		<table>
			<tr><td>Dock Door	</td>	<td><%= form.select :dock_door_id, 	@available_dock_doors.collect {|dd| [dd.name, dd.id]}		%>	</td></tr>
			<tr><td>Receipt		</td>	<td><%= form.select :receipt_id,	@available_receipts.collect {|r| [r.receipt_number,r.id]}	%>	</td></tr>
		</table>
	<%= submit_tag "Receive"	%>
	<% end %>
	
