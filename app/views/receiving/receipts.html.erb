<h1>Receipts</h1>
<p>Please enter your search criteria.</p>
	<% form_for :receipts, :url => {:controller => 'receiving', :action => 'receipts'} do |form|	%>
		<table>
			<tr><td>Supplier		</td>	<td><%= form.select :supplier_id, @warehouse.company.suppliers.collect {|s| [s.name, s.id]}, :include_blank => true				%>	</td>
				<td>Receipt Type	</td>	<td><%= form.select :receipt_type_id, @warehouse.company.receipt_types.collect {|rt| [rt.name, rt.id]}, :include_blank => true	%>	</td>
			</tr>
			<tr>
				<td>Est. Receipt Date	</td>	<td><%= form.date_select :estimated_receipt_date, 	:include_blank => true	%>	</td>
				<td>Real Receipt Date	</td>	<td><%= form.date_select :real_receipt_date, 		:include_blank => true	%>	</td>
			</tr>
			
		</table>
	<% end %>
	<br><br><hr>
	<%= link_to "Create New Receipt", :controller => 'receiving', :action => 'new_receipt'	%>
	<% if request.post?	%>
		<% unless @receipts.empty?	%>
			<table>
				<tr><th>Receipt Number	</th>	<th>Supplier	</th>	<th>Expected Receipt Date	</th>	<th>Total Receipt Quantity	</th></tr>
				<% @receipts.each do |receipt|	%>
					<tr><td><%= receipt.receipt_number	%>	</td>
						<td><%= receipt.supplier.nil? ? "" : receipt.supplier.name											%>	</td>
						<td><%= receipt.estimated_receipt_date																%>	</td>
						<td><%= receipt.total_quantity																		%>	</td>
						<td><%= link_to "View", :controller => 'receiving', :action => 'view_receipt'						%>	</td>
						<td><%= link_to "Edit", :controller => 'receiving', :action => 'edit_receipt', :receipt => receipt	%>	</td>
					</tr>
				<% end %>
		<% else %>
			<p>No Receipts were found that match your criteria.</p>
		<% end %>
	<% end %>